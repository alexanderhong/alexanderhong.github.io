doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Alegreya+Sans:ital,wght@0,400;0,700;1,400;1,700&family=Alegreya:ital,wght@0,400;0,700;1,400;1,700&display=swap')
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    header.header.fixed
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)= locals.name
          block navbar
            nav.navbar
              li
                a(href=locals.url)= 'HOME' 
              li
                a(href='/resume')= 'RESUME' 
              li
                a(href='/reel')= 'REEL'  
              li
                a(href='mailto:alexanderhong@berkeley.edu')= 'CONTACT' 
    div#content
      block illustration
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner }
