
extends layout

block illustration
  section.illustration(style="background-image: url('blog/images/banner.png')")
block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block content
  article.article
    h1= page.title
    section.content!= typogr(page.html).typogrify()
    
